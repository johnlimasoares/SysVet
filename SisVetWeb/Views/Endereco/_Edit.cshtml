@model Domain.Entidades.Cadastro.Localidade.Endereco

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Endereço</h4>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
      
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            
            <div class="form-group" style="display: none">
                @Html.DropDownList("ClienteID", String.Empty)
                @Html.ValidationMessageFor(model => model.ClienteId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Cep, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Cep, new { @class = "form-control",id = "cep" })
                    @Html.ValidationMessageFor(model => model.Cep)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Logradouro, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Logradouro, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Logradouro)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Comp.</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Complemento, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Complemento)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Número", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Numero)
                </div>
            </div>
            
            <div class="form-group">
                @Html.Label("Município", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CidadeID", (IEnumerable<SelectListItem>)ViewBag.Cidades, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
     <input class="btn btn-success" type="submit" value="Confirmar" />
     <button class="btn " data-dismiss="modal">Cancelar</button>
 </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/mascaras")
}
