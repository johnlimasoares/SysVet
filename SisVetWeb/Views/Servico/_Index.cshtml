@using SisVetWeb.Helpers
@model IEnumerable<Domain.Entidades.Cadastro.Servico>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Histórico de Serviços</strong>
    </div>
    <div>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Adicionar Serviço", "Create", "Servico", routeValues: new { AtendimentoID = ViewBag.AtendimentoID }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</div>
    <table class="table">
        <tr>
       
            <th>
                @Html.DisplayName("Serviço")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoServico.Valor)
            </th>
          
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
      
            <td>
                @Html.DisplayFor(modelItem => item.TipoServico.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoServico.Valor)
            </td>
            
            <td>
                <div class="pull-right">
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "Servico", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-xs btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Excluir", "Delete", "Servico", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-xs btn-danger" })

                    </div>
                </div>
            </td>
        </tr>
        }

    </table>
</div>