@model Domain.Entidades.Cadastro.Contato.Telefone

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Telefone</h4>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new {@class = "text-danger"})


            <div class="form-group">
                @Html.Label("Número", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Numero, new { @class = "form-control",id="telefone",name="telefone"})
                    @Html.ValidationMessageFor(model => model.Numero)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tipo", new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.DropDownList("TipoTelefoneID", (IEnumerable<SelectListItem>) ViewBag.TipoTelefoneID, "Selecione...", new {@class = "form-control",required = true})
                </div>
            </div>

        </div>
     
    </div>

    <div class="modal-footer">
        <input class="btn btn-success" type="submit" value="Confirmar" />
        <button class="btn " data-dismiss="modal">Cancelar</button>
    </div>

}
