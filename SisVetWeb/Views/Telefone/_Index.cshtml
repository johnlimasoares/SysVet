@using SisVetWeb.Helpers
@model IEnumerable<Domain.Entidades.Cadastro.Contato.Telefone>


<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
 
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Lista de Telefones</strong>
    </div>

    <div>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Adicionar Telefone", "Create", "Telefone", routeValues: new { ClienteID = ViewBag.ClienteID }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right", id = "btnInserir" })</div>
    <table class="table table-hover table-condensed">
        <tr>
            <th>
               Número
            </th>
            <th>
               Tipo 
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoTelefone.Descricao)
                </td>
                <td>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Telefone", routeValues: new { Id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "Telefone", routeValues: new { Id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
