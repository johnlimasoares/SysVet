@using SisVetWeb.Helpers
@model IEnumerable<Domain.Entidades.Operacao.Vacinacao.Vacinacao>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Histórico de Vacinação</strong>
    </div>

    <div>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Lançar Vacina", "Create", "Vacinacao", routeValues: new { AnimalID = ViewBag.AnimalID }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</div>
    <table class="table">
        <tr>
       
            <th class="col-md-5">
                @Html.DisplayName("Vacina")
            </th>
            <th>
                @Html.DisplayName("Data Previsão")
            </th>
            <th>
                @Html.DisplayName("Data Vacinação")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
               
                <td class="col-md-5">
                    @Html.DisplayFor(modelItem => item.Vacina.Descricao)
                </td>
                <td>
                    @Html.FormatValue(Convert.ChangeType(item.DataPrevisao, typeof(object)),
                        "{0: dd/MM/yyyy}")
                </td>
                <td>
                    @Html.FormatValue(Convert.ChangeType(item.DataVacinacao, typeof(object)),
                        "{0: dd/MM/yyyy}")
                </td>
                <td>
                    <div class="pull-right">
                        <div class="pull-right">
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "Vacinacao", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            &nbsp;
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Excluir", "Delete", "Vacinacao", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>