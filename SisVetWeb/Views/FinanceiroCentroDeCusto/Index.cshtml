@using PagedList.Mvc
@using SisVetWeb.Helpers
@model PagedList.IPagedList<Domain.Entidades.Cadastro.Financeiro.FinanceiroCentroDeCusto>

<h2>Lista de Centro de Custos</h2>
@Html.Partial("ConfirmacaoExclusao")
<p>
    @using (Html.BeginForm("Index", "FinanceiroCentroDeCusto", FormMethod.Get)) {
        <div class="row">
            <div class="pull-right col-md-1">
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Adicionar Centro de Custo", "Create", "FinanceiroCentroDeCusto", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>

            <div class="col-md-3">
                @Html.TextBox("pesquisa", "", new { placeholder = "Pesquise...", @class = "form-control" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Filtrar" class="btn btn-primary pull-left" />
            </div>
        </div>

    }
</p>

<table class="table table-condensed table-hover">
    <tr class="active">
        <th>
            Id
        </th>
        <th>
            Descrição
        </th>
        <th>
            Grupo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinanceiroCentroDeCustoGrupo.Descricao)
            </td>
            <td class="col-sm-2">
                <div class="pull-right">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "FinanceiroCentroDeCusto", routeValues: new { ID = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    &nbsp;
                    <button type="submit" class="btn btn-default btn-danger" id="@item.Id" name="@item.Descricao">
                        <i class="glyphicon glyphicon-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    }

</table>

Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina, pesquisa = ViewBag.pesquisaCorrente }))
