@using SisVetWeb.Helpers
<link href="~/Content/relatorios.css" rel="stylesheet" />
<link href="~/Content/form-bootstrap-override.css" rel="stylesheet" />
<h1>Relatório de Análise de Vacinas Mensal</h1>
<form></form>
<div id="container">
    @using (Html.BeginForm("GetRelatorioAnaliseMensalDeVacinas", "Reports", FormMethod.Get))
    {
        <br />
        <label for="data" id="descricaoPeriodo">Período:</label>
        <input class="form-control input-sm form-override" id="data" name="dataInicial" type="date">
        <input class="form-control input-sm form-override" id="datafinal" name="datafinal" type="date">
        <br />
    <input type="text" class="form-control" name="descricaoVacina" id="pesquisaTexto" placeholder="Pesquise pelo nome da vacina" />
        <hr />
        <button type="submit" class="btn btn-primary input-lg">Gerar Relatório</button>
    }
</div>
