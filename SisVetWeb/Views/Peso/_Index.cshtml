@using SisVetWeb.Helpers
@model IEnumerable<Domain.Entidades.Cadastro.Peso>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Histórico de Pesos</strong>
    </div>

    <div>@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Adicionar Peso", "Create", "Peso", routeValues: new { AnimalID = ViewBag.AnimalID }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })</div>
    <table class="table table-condensed table-hover">
        <tr class="active">
            <th>
                @Html.DisplayName("Data")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PesoAnimal)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.FormatValue(Convert.ChangeType(item.DataCadastro, typeof(object)),
                            "{0: dd/MM/yyyy}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PesoAnimal)
                </td>
                <td>
                    <div class="pull-right">
                        <div class="pull-right">
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "Peso", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-xs btn-default" })
                            &nbsp;
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Excluir", "Delete", "Peso", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-xs btn-danger" })

                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>
</div>