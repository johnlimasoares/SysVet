
    @model PagedList.IPagedList<Domain.Entidades.Cadastro.Contato.TipoTelefone>
    @using SisVetWeb.Helpers;
    @using PagedList.Mvc

    @{
        ViewBag.Title = "Index";
    }

    <h3>Lista de Tipos de Telefones</h3>

    <p>
        @using (Html.BeginForm("Index", "TipoTelefone", FormMethod.Get)) {
            <div class="row">
                <div class="pull-right col-md-1">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Adicionar Tipo Telefone", "Create", "TipoTelefone", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                </div>

                <div class="col-md-3">
                    @Html.TextBox("SearchString", "", new { placeholder = "Pesquise...", @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Filtrar" class="btn btn-primary pull-left" />
                </div>
            </div>

        }
    </p>
    <table class="table">
        <tr class="active">
            <th>
                Id
            </th>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "TipoTelefone", routeValues: new { Id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Detalhar", "Details", "TipoTelefone", routeValues: new { Id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Excluir", "Delete", "TipoTelefone", routeValues: new { Id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }

    </table>
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentiFilter = ViewBag.CurrentFilter }))
