@using System.Globalization
@model SisVetWeb.Models.InformacaoDeParcelaViewModel
<link href="~/Content/contasReceberBaixa.css" rel="stylesheet" />

@using (Html.BeginForm("CancelarBaixa", "FinanceiroContasReceber"))
{
    <div id="div-principal">
        <div>
            <span class="glyphicon glyphicon-usd" id="icon-dolar"></span>
            <label id="labelRecebimento">Cancelamento de Recebimento</label>
        </div>
        <br />
        <label id="dadosParcelaLabel">Dados da parcela</label>

        <table id="demostrativo-table-cabecalho" cellpadding="5">
            <tr>
                <td class="fonte-label">Cliente: </td>
                <td class="demostrativo-parcelas-cabecalho-value ">@Model.NomeCliente</td>
            </tr>
            <tr>
                <td class="fonte-label">Número Documento: </td>
                <td class="demostrativo-parcelas-cabecalho-value ">@Model.NumeroDocumento</td>
            </tr>
            <tr>
                <td class="fonte-label">Data Vencimento: </td>
                <td class="">@Model.DataVencimento.ToString("D", new CultureInfo("pt-BR"))</td>
            </tr>
            <tr>
                <td class="fonte-label">Data Recebimento: </td>
                <td class="">@Model.DataRecebimento.ToString("D", new CultureInfo("pt-BR"))</td>
            </tr>
            <tr>
                <td class="fonte-label label-total">Valor Total: </td>
                <td class="fonte-label label-total">@Model.ValorTotalLiquido.ToString("N")</td>
            </tr>
        </table>
                
        @Html.HiddenFor(x => x.ParcelaId)
        <hr />
        <div class="row" style="padding-left: 10px">
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
            <input type="submit" value="Cancelar Baixa" class="btn btn-warning" />
        </div>
    </div>
}